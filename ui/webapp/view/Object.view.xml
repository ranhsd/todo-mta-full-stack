<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.f.semantic" controllerName="com.todo.demo.controller.Object">

<ObjectHeader title="{title}" introActive="true" titleActive="true" id="__header0"/>

<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="__form1">

    <sap.ui.layout.form:content>

        <sap.ui.core:Title text="Status &amp; Notes" id="__title1"/>

        <Label text="Status" id="__label2"/>

        <RadioButtonGroup width="100%" columns="2" selectedIndex="{status}" id="__group0">

            <buttons>

                <RadioButton selected="true" groupName="__group0" text="New" id="__button0"/>

                <RadioButton groupName="__group0" text="Completed" id="__button1"/></buttons>

        </RadioButtonGroup>

        <Label text="Notes" id="__label3"/>

        <Input width="100%" id="__input5" value="{note}" editable="false"/></sap.ui.layout.form:content>

</sap.ui.layout.form:SimpleForm>

</mvc:View>